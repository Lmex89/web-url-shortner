# ============================================
# ENVIRONMENT VARIABLES EXAMPLE
# ============================================
# Copy this file to .env and update the values
# All React environment variables MUST start with REACT_APP_

# API Configuration (REQUIRED)
VITE_REACT_APP_API_URL=REPLACE_API_URL
VITE_REACT_APP_USE_MOCK_API=false

# API Settings
VITE_REACT_APP_API_TIMEOUT=10000
VITE_REACT_APP_API_RETRY_ATTEMPTS=3

# App Configuration
VITE_REACT_APP_NAME=URL Shortener
VITE_REACT_APP_VERSION=1.0.0

# Feature Flags
VITE_REACT_APP_ENABLE_ANALYTICS=false
VITE_REACT_APP_ENABLE_DEBUG=true
VITE_REACT_APP_SHOW_DEV_TOOLS=false
NODE_ENV=production

# ============================================
# EXAMPLES FOR DIFFERENT SETUPS
# ============================================

# For Local Development:
# REACT_APP_API_URL=http://localhost:3001/api/v1
# REACT_APP_USE_MOCK_API=true
# REACT_APP_ENABLE_DEBUG=true

# For Production:
# REACT_APP_API_URL=https://prod-api.yourdomain.com/v1
# REACT_APP_USE_MOCK_API=false
# REACT_APP_ENABLE_DEBUG=false
# REACT_APP_ENABLE_ANALYTICS=true

# For Testing:
# REACT_APP_API_URL=https://test-api.yourdomain.com/v1
# REACT_APP_USE_MOCK_API=false
# REACT_APP_ENABLE_DEBUG=true